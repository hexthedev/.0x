" .ideavimrc is a configuration file for IdeaVim plugin. It uses
"   the same commands as the original .vimrc configuration.
" You can find a list of commands here: https://jb.gg/h38q75
" Find more examples here: https://jb.gg/share-ideavimrc


"" -- Suggested options --
" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=5

" Do incremental searching.
set incsearch

" Don't use Ex mode, use Q for formatting.
" map Q gq

" h left
" j down
" k up
" l right
" d cut, D cut till line end (d$), ctrl d scroll half down
" X (dh)
" c cut and insert
" s cut and insert character
" y copy
" p paste
" u undo (U undo all), ctrl u scroll half up
" r replace (ctrl+r undo last), R multireplace
" . repeat last change
" o open new line below, above
" 0 begining of line, ^ beginning non blank, $ end of line, g_ end non blank
" f find next occurence, F back
" t find next one before, T back
" ; repeat find
" , repeat find backwards
" w move little word, W move big word
" b move back littleWord, B move back big word
" e end of current work, E end of current big word
" ( back a sentence
" ) forward a sentence
" { back a para
" } forward a para
" G end of file, gg start of file, % matching bracet
" zz position current line to window middle
" >> indent current line
" = auto indent code
" m[a] mark location
" `[a] move to location
" "[a] register actions,
" J join line 

" --- Enable IdeaVim plugins https://jb.gg/ideavim-plugins

" Highlight copied text
Plug 'machakann/vim-highlightedyank'
" Commentary plugin
Plug 'tpope/vim-commentary'

noremap H :source ~/.ideavimrc

noremap <D-c> "+y
noremap <D-v> "+p
noremap <D-x> "+d

" Remap arrow keys in Normal mode
map jk <Action>(Back)
map jK <Action>(Forward) 

noremap l <Nop>
vnoremap l <Nop>
onoremap l <Nop>

noremap W b
vnoremap W b
onoremap W b

noremap rr r
vnoremap rr r
onoremap rr r

map rol /}<CR>dd?{<CR>dd^/return<CR>ciw=><Esc> 
map rov /}<CR>dd?{<CR>ddi=> <Esc><Esc> 
map rml /=><CR>xxi{<CR><Down>}<Esc>rf 

map hk inoremap <CR>vnoremap <CR>onoremap <Esc>V<Up><Up>lc


" Acejump 
map jf <Action>(AceAction)
map jv <Action>(AceTargetAction)
map jl <Action>(AceLineAction)
map rf <Action>(ReformatCode)

map lc <Action>(EditorAddCaretPerSelectedLine)

"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
"" Map \r to the Reformat Code action
"map \r <Action>(ReformatCode)

"" Map <leader>d to start debug
"map <leader>d <Action>(Debug)

"" Map \b to toggle the breakpoint on the current line
"map \b <Action>(ToggleLineBreakpoint)
